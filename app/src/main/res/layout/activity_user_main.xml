                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_manualAttID"
                    android:layout_width="165dp"
                    android:layout_height="171dp"
                    android:layout_below="@+id/cvGoToTask"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginBottom="10dp"
                    app:cardCornerRadius="14dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_gravity="center">

                        <ImageView
                            android:id="@+id/img7"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/shadow_oval"
                            android:padding="18dp"
                            android:src="@drawable/calendar2" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/img7"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="14dp"
                            android:text="Manual Attendance">

                        </androidx.appcompat.widget.AppCompatTextView>
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_support"
                    android:layout_width="165dp"
                    android:layout_height="171dp"
                    android:layout_below="@+id/cvGoToTask"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="18dp"
                    android:layout_toEndOf="@+id/cv_manualAttID"
                    app:cardCornerRadius="14dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_gravity="center">

                        <ImageView
                            android:id="@+id/img8"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/shadow_oval"
                            android:padding="18dp"
                            android:src="@drawable/technicalsupport" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/img8"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="14dp"
                            android:text="Support">

                        </androidx.appcompat.widget.AppCompatTextView>
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_chnagepass"
                    android:layout_width="165dp"
                    android:layout_marginStart="@dimen/dimen5"
                    android:layout_height="171dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_below="@+id/cv_manualAttID"
                    app:cardCornerRadius="14dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <ImageView
                            android:id="@+id/img22"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/shadow_oval"
                            android:padding="18dp"
                            android:src="@drawable/password" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv22"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/img22"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="14dp"
                            android:text="Change Password">

                        </androidx.appcompat.widget.AppCompatTextView>
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cvShareApp"
                    android:layout_width="165dp"
                    android:layout_height="171dp"
                    android:layout_below="@+id/cv_support"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="18dp"
                    android:layout_toEndOf="@+id/cv_manualAttID"
                    app:cardCornerRadius="14dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_gravity="center">

                        <ImageView
                            android:id="@+id/img10"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/shadow_oval"
                            android:padding="18dp"
                            android:src="@drawable/ic_baseline_share_24" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/img10"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="14dp"
                            android:text="Share App">

                        </androidx.appcompat.widget.AppCompatTextView>
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </RelativeLayout>
        </LinearLayout>


    </androidx.core.widget.NestedScrollView>
