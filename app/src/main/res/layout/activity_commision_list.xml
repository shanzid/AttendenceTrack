<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".agent.CommisionListActivity">
    <LinearLayout
        android:id="@+id/one"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/toolbar_color"
        android:orientation="horizontal">
        <ImageView
            android:padding="5dp"
            android:id="@+id/back"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight=".1"
            android:src="@drawable/ic_arrow_left_black_48dp"
            app:tint="@color/white" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_weight=".9"
            android:text="Commission List"
            android:textColor="@color/white"
            android:textSize="20sp">


        </androidx.appcompat.widget.AppCompatTextView>


    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardBackgroundColor="@color/toolbar_color"
        app:cardElevation="@dimen/dimen5"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.SearchView
            android:id="@+id/search_view"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="@dimen/dimen20"
            android:layout_marginTop="10dp"
            android:background="@drawable/gradiant_white"
            android:layout_marginEnd="@dimen/dimen20"
            android:layout_marginBottom="10dp"
            android:theme="@style/SearchViewStyle2"
            app:iconifiedByDefault="false"
            app:queryBackground="@android:color/transparent"
            app:queryHint="Search user"
            app:searchIcon="@drawable/ic_baseline_search_24_toolbar" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:padding="@dimen/dimen8"
        android:layout_margin="@dimen/dimen10"
        android:background="@drawable/shadow_border"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="16sp"
            android:id="@+id/tvCompany"
            android:textStyle="bold"
            android:padding="@dimen/dimen5"
            android:text="Total Company : "

            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="16sp"
            android:id="@+id/totalDeu"
            android:textStyle="bold"
            android:padding="@dimen/dimen5"
            android:text="Total Due : "
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:padding="@dimen/dimen8"
        android:id="@+id/rvDeuList"
        android:layout_height="wrap_content"/>



</LinearLayout>