<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:padding="10dp"
    app:cardBackgroundColor="#ffff"
    app:cardCornerRadius="6dp"
    app:cardElevation="4dp">

    <RelativeLayout

        android:id="@+id/one"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/dimen5"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen5"
        android:layout_gravity="center"
        android:clipToPadding="false"
        android:orientation="horizontal"
        android:padding="@dimen/dimen5"

        >


        <TextView
            android:id="@+id/nameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:text="Name:"
            android:textColor="#000"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/mobileTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nameTV"
            android:layout_marginTop="@dimen/dimen5"
            android:paddingStart="10dp"
            android:text="Mobile:"
            android:textColor="#000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/mobile2TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mobileTV"
            android:layout_marginTop="@dimen/dimen5"
            android:layout_marginEnd="@dimen/dimen30"
            android:paddingStart="10dp"
            android:text="Mobile2:"
            android:textColor="#000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/addressTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mobile2TV"
            android:layout_marginTop="@dimen/dimen5"
            android:layout_marginEnd="60dp"
            android:paddingStart="@dimen/dimen10"
            android:text="Address:"
            android:textColor="#000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/nidTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/addressTV"
            android:layout_marginTop="@dimen/dimen5"
            android:layout_marginEnd="@dimen/dimen30"
            android:paddingStart="10dp"
            android:text="NID:"
            android:textColor="#000"
            android:textSize="16sp" />

        <ImageView
            android:visibility="visible"
            android:id="@+id/blockUser"
            android:layout_width="40dp"
            android:paddingRight="8dp"
            android:paddingTop="4dp"
           android:layout_alignParentRight="true"
            android:layout_height="40dp"
            android:src="@drawable/block_user"
            />

    </RelativeLayout>
</androidx.cardview.widget.CardView>

