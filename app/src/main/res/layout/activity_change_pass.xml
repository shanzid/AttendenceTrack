        <LinearLayout
            android:layout_below="@+id/EmailTV"
            android:layout_width="match_parent"
            android:layout_marginStart="@dimen/dimen30"
            android:id="@+id/cpasslayout"
            android:background="@drawable/gradiant_white_orange"
            android:layout_marginEnd="@dimen/dimen30"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/oldPassword"
                android:layout_width="0dp"
                android:layout_weight=".9"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_baseline_lock_24"
                android:drawablePadding="20dp"
                android:drawableTint="@color/black"
                android:fontFamily="@font/popin_regular"
                android:hint=" *****"
                android:inputType="textPassword"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHint="@color/hint" />

            <ImageView
                android:id="@+id/showPassword"
                android:layout_gravity="center"
                android:padding="@dimen/dimen5"
                android:layout_width="0dp"
                android:layout_weight=".1"
                android:layout_height="@dimen/dimen40"
                android:src="@drawable/eye"
                app:tint="@color/black"/>
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/newPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cpasslayout"
            android:layout_marginStart="@dimen/dimen35"
